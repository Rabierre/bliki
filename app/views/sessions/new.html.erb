<div id="entry">
    <div id="login" class="layerbox">

        <div class="header">
            <strong>login</strong>
        </div>

        <div class="body">
            <%= form_tag sessions_path do %>
                <!-- todo error handling -->
                <div class="field">
                    <dl>
                        <dt><%= label_tag :email %></dt>
                        <dd><%= text_field_tag :email, params[:email] %></dd>
                    </dl>
                </div>
                <div class="field">
                    <dl>
                        <dt><%= label_tag :password %></dt>
                        <dd><%= password_field_tag :password %></dd>
                    </dl>
                </div>
                <div class="actions"><%= submit_tag "login" %></div>
            <% end %>
        </div>
    </div>
</div>